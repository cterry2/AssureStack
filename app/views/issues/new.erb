<div style="margin-top: 20px;height:5px;"></div>
<div class="top-of-page">
  <h3>New Issue!</h3>
  <p>Please make sure you have searched for similar issues before posting.</p>
</div>

<div style="margin:10px 0;">
  <%= link_to '<<< Back', root_path%>
</div>
<div class="newIssueForm">
  <%= form_for :issue, url: issues_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>

<%= link_to '<<< Back', root_path%>